{% extends "AppBundle::layout.html.twig" %}

{% block content %}
    <a href="{{ path('recipe_list') }}" class="pull-right">Рецепты</a><br>
    <br>

    <h2>
        Список ингредиентов
        <a class="btn btn-green pull-right" href="{{ path('ingredient_create') }}">Новый ингредиент</a>
    </h2>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.name }}</td>
                <td>
                    <a href="{{ path('ingredient_edit', {id: ingredient.id }) }}">Редактировать</a> /
                    <a href="{{ path('ingredient_delete', {id: ingredient.id }) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
